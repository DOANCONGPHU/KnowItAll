<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_test">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lv1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_name_complete"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Quang Huy"
                android:textColor="@color/red"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/logo2_app"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="450dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/radius_btn_test"
            android:backgroundTint="@color/pink_b"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="289dp"
                android:layout_height="250dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/radius_btn_test"
                android:backgroundTint="@color/pink_z"
                android:orientation="vertical" >


                <TextView
                    android:id="@+id/tv_start_1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/red"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="Bài thi:" />

                <TextView
                    android:id="@+id/tv_start_2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/red"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="Tác giả:" />

                <TextView
                    android:id="@+id/tv_start_3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/red"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="Số câu:" />
                <TextView
                    android:id="@+id/tv_start_4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/red"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="Thời gian:" />

                <TextView
                    android:id="@+id/tv_start_5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/red"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="Thời gian thực hiện:" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Bạn chắc chắn thực hiện bài thi" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_No_Start_test"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="@drawable/radius_btn_test"
                    android:backgroundTint="@color/pink_z"
                    android:text="Không" />

                <Space
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_Yes_Start_test"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:background="@drawable/radius_btn_test"
                    android:backgroundTint="@color/pink_z"
                    android:text="Có" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/navigation_bottom_bar" />
    </LinearLayout>


</LinearLayout>