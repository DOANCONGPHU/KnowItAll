<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_test">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include1"
            layout="@layout/profile_navigation_layout"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:background="@drawable/radius_btn_test"
            android:backgroundTint="@color/pink_b"
            android:layout_marginTop="15dp"
            android:layout_marginStart="28dp">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/red"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Bảo mật tài khoản" />

            <TextView
                android:id="@+id/tv_protection_update"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/red"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:onClick="onClickResetPassword"
                android:layout_marginStart="20dp"
                android:text="Cập nhật mật khẩu" />

            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/red"
                android:textSize="18dp"
                android:onClick="onClickLogout"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:text="Đăng xuất" />


        </LinearLayout>
        <include
            layout="@layout/navigation_bottom_bar"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>